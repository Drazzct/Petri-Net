<?xml version="1.0" encoding="UTF-8"?>
<pnml xmlns="http://www.pnml.org/version-2009/grammar/pnml">
  <net id="torture_net" type="http://www.pnml.org/version-2009/grammar/ptnet">
    <page id="page1">
      
      <place id="p_isolated">
        <name><text>Lonely Place</text></name>
      </place>

      <place id="p_monitor">
        <name><text>Monitor</text></name>
        <initialMarking><text>1</text></initialMarking>
      </place>

      <place id="p_start">
        <name><text>Start</text></name>
        <initialMarking><text>1</text></initialMarking>
      </place>
      <place id="p_mid">
        <name><text>Middle</text></name>
      </place>

      <transition id="t_sink">
        <name><text>Black_Hole</text></name>
      </transition>

      <transition id="t_move">
        <name><text>Move_Token</text></name>
      </transition>

      <arc id="a1" source="p_start" target="t_move"/>
      <arc id="a2" source="t_move" target="p_mid"/>
      
      <arc id="a3" source="p_monitor" target="t_move"/>
      <arc id="a4" source="t_move" target="p_monitor"/>

      <arc id="a5" source="p_monitor" target="t_sink"/>

    </page>
  </net>
</pnml>